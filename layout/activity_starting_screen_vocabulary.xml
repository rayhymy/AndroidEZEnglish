<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".evaluation.vocabulary.StartingScreenActivityVocabulary"
    android:orientation="vertical"
    android:background="@drawable/english">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:text="@string/test_your_english_level"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="25sp" />

    <TextView
        android:id="@+id/text_view_high_score_vocabulary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/high_score_0"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="25sp"
        android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_difficulty_vocabulary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:textColor="@color/colorTransparentWhite"
            android:background="@color/colorPrimary" />


    <ImageView
        android:id="@+id/button_start_quiz_vocabulary"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/start"/>


<!--
    <Button
        android:id="@+id/button_start_quiz_vocabulary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorTransparentWhite"
        android:text="@string/start"
        android:textSize="25sp"
        android:textStyle="bold" />
        -->
    </LinearLayout>
    </ScrollView>


</RelativeLayout>